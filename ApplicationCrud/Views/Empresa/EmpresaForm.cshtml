@model ApplicationCrud.Models.Empresa
@{
    ViewBag.Title = "Nova Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Empresa"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.NomeEmpresa)
        @Html.TextBoxFor(m => m.NomeEmpresa, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NomeEmpresa)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumeroTelefone)
        @Html.TextBoxFor(m => m.NumeroTelefone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumeroTelefone)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cnpj)
        @Html.TextBoxFor(m => m.Cnpj, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cnpj)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Endereco)
        @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Endereco)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CapitalSocial)
        @Html.TextBoxFor(m => m.CapitalSocial, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CapitalSocial)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.TipoEmpresa) Matriz
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}