@model ApplicationCrud.Models.Funcionario
    @{
        ViewBag.Title = "Novo Funcionário";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Save", "Funcionario"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Nome)
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cargo)
            @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Cargo)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Telefone)
            @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Telefone)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Matricula)
            @Html.TextBoxFor(m => m.Matricula, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Matricula)
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    }